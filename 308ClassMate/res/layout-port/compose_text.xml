<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <TextView
        android:id="@+id/composeTextReceipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="18dp"
        android:text="收件人: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/composeTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/composeTextReceipt"
        android:layout_alignBottom="@+id/composeTextReceipt"
        android:layout_toRightOf="@+id/composeTextReceipt"
        android:text="王啟翰"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/composeTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/compsoeTextSendbtn"
        android:layout_alignLeft="@+id/composeTextReceipt"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/composeTextReceipt"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/compsoeTextSendbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="118dp"
        android:text="發送" />

    <Button
        android:id="@+id/composeTextCancelbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="37dp"
        android:layout_toLeftOf="@+id/composeTextName"
        android:text="取消" />

</RelativeLayout>